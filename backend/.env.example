SECRET_KEY=your-super-secret-key-change-this-in-production
## DATABASE CONFIG
# For local SQLite (default)
DATABASE_URL=sqlite:///./ai_loan_system.db

# For Supabase / PostgreSQL (uncomment and fill credentials)
# Format: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require
# Example:
# DATABASE_URL=postgresql+psycopg2://postgres:yourpassword@db.<project-ref>.supabase.co:5432/postgres?sslmode=require

# Optional: Target schema (Postgres)
# Default is "public". Change if you want to isolate tables into a different schema.
DB_SCHEMA=public
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
# Default provider (gemini, ollama, openrouter)
LLM_PROVIDER=ollama

# Gemini API (for cloud deployment)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Ollama (for local development)
OLLAMA_API_URL=http://localhost:11434/api
# Use a locally available tag to avoid network pulls if needed
OLLAMA_MODEL=llama3.2

# OpenRouter (multi-model via OpenAI-compatible API)
OPENROUTER_API_KEY=your-openrouter-key-here
# Smaller default to reduce cost/latency while maintaining quality
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct
OPENROUTER_SITE_URL=http://localhost:8000
OPENROUTER_APP_NAME=AI Loan System

# Optional: Directory containing ML model artifacts (model, scaler, encoders)
# If not set, the app will look for ../../ml/app/models relative to backend
# Example: /absolute/path/to/ai-loan-system/ml/app/models
# Groq (Llama 3 via Groq)
GROQ_API_KEY=your-groq-api-key

# Deepgram (Real-time STT)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Optional: Directory containing ML model artifacts (model, scaler, encoders)

# Voice (Whisper/gTTS)
# Whisper CLI model tag: tiny | base | small | medium | large
WHISPER_MODEL=tiny
# Language hint for Whisper, e.g., en, hi, etc.
WHISPER_LANGUAGE=en

# Vosk (offline STT) model path (point to extracted model folder)
# Example: VOSK_MODEL_PATH=/absolute/path/to/ai-loan-system/backend/models/vosk-model-small-en-us-0.15
VOSK_MODEL_PATH=./models/vosk-model-small-en-us-0.15

# Piper (local TTS) model setting. Can be:
#  - absolute path to an ONNX model file, e.g. /path/en_US-amy-medium.onnx
#  - a short tag like 'en_US-amy-medium' (the app will look for backend/piper_voices/<tag>.onnx)
#  - a tag recognized by a system-wide Piper data directory
PIPER_MODEL=en_US-amy-medium
PIPER_VOICE=en_US-amy-medium

# Email/SMTP configuration
# Defaults work for Gmail with STARTTLS on port 587
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=saiganeshdhanekula34@gmail.com
SMTP_PASSWORD=123456

# OTP secret (for TOTP, future use). For now OTPs are stored in-memory for dev.
OTP_SECRET=JBSWY3DPEHPK3PXP

# Optional: Bypass DNS for Supabase Postgres by providing the DB host IP
# Only needed if your system can't resolve db.<project-ref>.supabase.co
# Example: SUPABASE_HOSTADDR=3.234.123.45
SUPABASE_HOSTADDR=
